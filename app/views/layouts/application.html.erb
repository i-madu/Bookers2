<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class ="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class ="container">
          <a class ="navbar-brand" href ="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                  <li class="nav-item">
                  <%= link_to user_path(current_user), class: 'nav-link text-ligth' do %>
                  <i class="fa-solid fa-house-chimney"></i>Home
                  <% end %>
                  </li>

                  <li class="nav-item">
                    <%= link_to users, class: 'nav-link text-ligth' do %>
                    <i class="fa-solid fa-users"></i>User
                    <% end %>
                  </li>

                  <li class="nav-item">
                    </i><%= link_to books_path, class: 'nav-link text-ligth' do %>
                    <i class="fa-solid fa-book-open"></i>Books
                    <% end %>
                  </li>

                  <li class="nav-item">
                    <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-ligth' do %>
                    <i class="fa-solid fa-right-to-bracket"></i>Log out
                    <% end %>
                  </li>

              <% else %>
                <li class="nav-item">
                  <%= link_to root_path, class: 'nav-link text-ligth' do %>
                  <i class="fa-solid fa-house-chimney"></i>Home
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-ligth' do %>
                  <i class="fa-solid fa-link"></i>About
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: 'nav-link text-ligth' do %>
                  <i class="fa-solid fa-user-plus"></i>sign up
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to new_user_session_path, class: 'nav-link text-ligth' do %>
                  <i class="fa-solid fa-right-to-bracket"></i>Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
     <main class="mx-5 mb-auto">
       <%= flash[:notice] %>
       <%= yield %>
     </main>
    <footer class ="bg-light text-dark">
      <dev class="container mp-5">
        <div class="row">
          <<div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </dev class="container">

    </footer>




  </body>
</html>
