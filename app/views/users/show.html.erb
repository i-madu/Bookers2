<div class="container px-5 px-md-0">
  <%= render 'layouts/error_message',book: @book %>
  <div class="row py-5 px-md-5">
    <%= render 'list',user: @user,book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan=3></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
             <%= link_to user_path do %>
             <%= image_tag book.user.get_profile_image(50,50) %>
             <% end %>
             </td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>