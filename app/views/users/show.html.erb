<dev class="container">
  <div class="row">
    <div class="col-md-3 mx-5">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            </thead>
            <tr>
              <th>introduction</th>
            </tr>
        </table>
        <div ="row">
          <%= link_to edit_user_path,class:"btn btn-outline-dark btn-sm btn-block",type:"button" do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h2>New Book</h2>
        <%= form_with model: @user, url: 'new_user_path', method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :Title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body %>
        </div>
        <%= f.submit "Create Book",class:"btn btn-success" %>

        <% end %>




    </div>
  </div>
</dev>