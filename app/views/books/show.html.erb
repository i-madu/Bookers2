<div class="container px-5 px-md-0">
  <%= render 'layouts/error_message',book: @book %>
  <div class="row py-5 px-md-5">
    <%= render 'users/list',user: @book.user,book: @new_book %>
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
             <%= link_to user_path(@books) do %>
             <%= image_tag @books.get_profile_image(50,50) %><br>
             <%= @books.name %>
             <% end %>
             </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %></td>


            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit",edit_book_path(@book),class:"btn btn-success" %></td>
            <td><%= link_to "Destroy",book_path(@book),class:"btn btn-danger",method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>